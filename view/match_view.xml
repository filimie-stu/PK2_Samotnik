<interface>
    <object class="GtkWindow" id="matchWindow">
        <property name="type">GTK_WINDOW_TOPLEVEL</property>
        <property name="title">Samotnik</property>
        <property name="default-height">250</property>
        <property name="default-width">400</property>
        <property name="window-position">GTK_WIN_POS_CENTER</property>
        <child>
            <object class="GtkGrid" id="mainMatchGrid">
                <child>
                    <object class="GtkGrid" id="boardAnchorPoint">
                        <property name="width-request">300</property>
                        <property name="height-request">200</property>
                        <property name="margin-top">20</property>
                        <property name="margin-bottom">20</property>
                        <property name="margin-start">20</property>
                        <property name="margin-end">20</property>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                        <property name="height">2</property>
                    </packing>
                </child>

                <child>
                    <object class="GtkFrame" id="scoreFrame">
                        <property name="label">Score summary</property>
                        <property name="width-request">80</property>
                        <property name="height-request">130</property>
                        <property name="margin-top">15</property>
                        <property name="margin-bottom">5</property>
                        <property name="margin-start">15</property>
                        <property name="margin-end">15</property>
                        <child>
                            <object class="GtkGrid">
                                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Takedowns:</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="takedownsCounter">
                                        <property name="label">0</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Left to go:</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="tokensLeftCounter">
                                        <property name="label">?</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>

                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                    </packing>
                </child>

                <child>
                    <object class="GtkFrame" id="matchMenuFrame">
                        <property name="label">Quick menu</property>
                        <property name="width-request">80</property>
                        <property name="height-request">80</property>
                        <property name="margin-top">5</property>
                        <property name="margin-bottom">15</property>
                        <property name="margin-start">15</property>
                        <property name="margin-end">15</property>
                        <child>
                            <object class="GtkButtonBox">
                                <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                                <property name="layout-style">GTK_BUTTONBOX_SPREAD</property>
                                <child>
                                    <object class="GtkButton" id="resetButton">
                                        <property name="label">Reset</property>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="mainMenuButton">
                                        <property name="label">Main menu</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">1</property>
                    </packing>
                </child>

            </object>
        </child>

    </object>

</interface>